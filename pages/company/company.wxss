/* pages/company/company.wxss */
.companyItem {
  display: flex;
  background: #fff;
  position: relative;
  margin: 12rpx 24rpx 18rpx;
  padding: 18rpx 24rpx;
  border-radius: 8rpx;
}
.companyItem text {
  font-size: 16px;
  margin: 20rpx 0 0 8rpx;
}
.logo {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}
.edit {
  width: 42rpx;
  height: 42rpx;
  position: absolute;
  right: 24rpx;
  margin: 20rpx 0 0 0;
}
.add {
  position: fixed;
  bottom: 12rpx;
  width: 100%;
}
.add button {
  width: 710rpx;
  margin: 0 auto;
  background: #169bd5;
  border: none;
  height: 76rpx;
  color: #fff;
  line-height: 76rpx;
  font-size: 15px;
}