/* pages/company/companyEdit.wxss */
.edit {
  background: #fff;
  font-size: 16px;
}
.editItem {
  display: flex;
  padding: 26rpx 24rpx;
  border-bottom: 1px solid #ddd;
}
.editItem1 {
  padding: 26rpx 24rpx;
  border-bottom: 1px solid #ddd;
}
.editItem2 {
  padding: 26rpx 24rpx;
}
.editItem3 {
  padding: 26rpx 24rpx 126rpx 24rpx;
}
.editItem2 > text {
  float: right;
}
.editItem3 > text {
  float: right;
}
.editItem1 textarea {
  padding: 16rpx 0;
  margin: 0 auto;
  line-height: 1.4;
  font-size: 14px;
  color: #666;
}
.editItem1 view {
  float: right;
}
.editItem1::after {
  content: '';
  display: block;
  width: 0;
  height: 0;
  clear: both;
}
.editItem input {
  padding: 0 0 0 8rpx;
  color: #666;
}

/* 保存 */
.add {
  position: fixed;
  bottom: 12rpx;
  width: 100%;
}
.add button {
  width: 710rpx;
  margin: 0 auto;
  background: #169bd5;
  border: none;
  height: 76rpx;
  color: #fff;
  line-height: 76rpx;
  font-size: 15px;
}

/* 上传图片 */
.imgList {
  display: flex;
  flex-wrap: wrap;
  width: 96%;
  margin: 0 auto;
  position: relative;
}
.add-img {
  width: 200rpx;
  height: 200rpx;
  background: rgba(244, 244, 244, .8);
  margin: 24rpx 0 0 0;
}
.add-img text {
  display: flex;
  justify-content: center;
  height: 200rpx;
  line-height: 200rpx;
  font-size: 42px;
}
.addImg {
  width: 200rpx;
  height: 200rpx;
  margin: 24rpx 12rpx 0 0;
}
.delete {
  position: relative;
  top: -209rpx;
  left: 166rpx;
  font-size: 12px;
  background: #333;
  width: 34rpx;
  height: 34rpx;
  color: #fff;
  text-align: center;
  line-height: 24rpx;
}