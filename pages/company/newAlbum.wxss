/* pages/company/newAlbum.wxss */
@import "album.wxss";
page {
  background: #fff !important;
}
.albumName {
  display: flex;
  margin: 24rpx 0 0 18rpx !important;
}
.albumName label {
  font-size: 18px;
  font-weight: 600;
}
.imgList {
  display: flex;
  flex-wrap: wrap;
  margin: 0 0 86rpx 28rpx;
}
.imgList image {
  width: 300rpx;
  height: 260rpx;
}
.imgItem {
  margin: 36rpx 20rpx 32rpx;
  position: relative;
}
.delete {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(77, 77, 77, 0.6);
  font-size: 12px;
  width: 42rpx;
  height: 42rpx;
  text-align: center;
  line-height: 42rpx;
  color: #fff;
}

/* 保存 */
.add {
  position: fixed;
  bottom: 12rpx;
  width: 100%;
}
.add button {
  width: 710rpx;
  margin: 0 auto;
  background: #169bd5;
  border: none;
  height: 76rpx;
  color: #fff;
  line-height: 76rpx;
  font-size: 15px;
}